<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="column-group">
        <appearances>
            <appearance name="default"
                        preview_template="Magento_PageBuilder/content-type/column-group/default/preview"
                        master_template="Magento_PageBuilder/content-type/column-group/default/master">
                <elements>
                    <element name="main">
                        <attribute name="column_reverse" source="data-reverse-column-mobile"/>
                        <attribute name="num_of_columns" source="data-num-of-columns"/>
                        <style name="flex_gap_field" source="gap" converter="Magento_PageBuilder/js/converter/style/remove-px"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
